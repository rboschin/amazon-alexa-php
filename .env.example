# Alexa PHP Framework Environment Configuration

# Logging Configuration
LOGGING_ENABLED=true
LOG_LEVEL=INFO
LOG_PATH=logs/alexa.log

# Performance Monitoring Configuration
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_PATH=logs/performance.log

# Debug Configuration
DEBUG=false

# Application Configuration
ALEXA_APP_ID=amzn1.ask.skill.YOUR_SKILL_ID_HERE

# Database Configuration (if using database services)
DB_PATH=data/alexa.db

# Cache Configuration (if using cache)
CACHE_ENABLED=true
CACHE_TTL=300

# Security Configuration
VALIDATE_REQUEST_SIGNATURE=true
VALIDATE_REQUEST_TIMESTAMP=true

# Request Limits
MAX_REQUEST_SIZE=10000
MAX_RESPONSE_SIZE=10000
