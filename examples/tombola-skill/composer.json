{
    "name": "tombola-napoletana/skill",
    "description": "Tombola Napoletana Alexa Skill built with Alexa PHP Framework",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "rboschin/amazon-alexa-php": "dev-master"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../..",
            "options": {
                "symlink": false
            }
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "TombolaNapoletana\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TombolaNapoletana\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "analyze": "phpstan analyse",
        "generate-model": "php ../bin/alexa generate:interaction-model --skill=\"Tombola Napoletana\" --invocation=\"tombola napoletana\" --handlers=\"src/Handlers\" --namespace=\"TombolaNapoletana\\Handlers\" --output=\"interaction-model.json"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
