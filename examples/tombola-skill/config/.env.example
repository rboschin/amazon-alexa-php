# Database Configuration
DB_PATH=./data/tombola.db

# Logging Configuration
LOGGING_ENABLED=true
LOG_LEVEL=INFO
LOG_PATH=logs/tombola.log

# Performance Monitoring Configuration
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_PATH=logs/tombola-performance.log

# Debug Configuration
DEBUG=true

# Application Configuration
ALEXA_APP_ID=amzn1.ask.skill.YOUR_SKILL_ID_HERE

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Security Configuration
VALIDATE_REQUEST_SIGNATURE=true
VALIDATE_REQUEST_TIMESTAMP=true

# Request Limits
MAX_REQUEST_SIZE=10000
MAX_RESPONSE_SIZE=10000

# Skill Configuration
SKILL_NAME=Tombola Napoletana
INVOCATION_NAME=tombola napoletana

# Game Configuration
MIN_NUMBER=1
MAX_NUMBER=90
AUTO_MODE_COUNT=5
