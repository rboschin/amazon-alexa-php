{
  "name": "rboschin/amazon-alexa-php",
  "type": "library",
  "description": "A PHP library for developing Amazon Alexa skills with modern fluent APIs and simplified development workflow.",
  "keywords": [
    "alexa",
    "alexa-skill",
    "alexa-sdk",
    "amazon-alexa",
    "amazon-alexa-php",
    "amazon-echo",
    "amazon-echo-php",
    "alexa-skill-php",
    "echo",
    "php",
    "php8",
    "php82",
    "php83",
    "skill",
    "alexa-custom-skill"
  ],
  "license": "MIT",
  "support": {
    "issues": "https://github.com/rboschin/amazon-alexa-php/issues",
    "source": "https://github.com/rboschin/amazon-alexa-php"
  },
  "authors": [
    {
      "name": "Roberto Boschin",
      "email": "rboschin@example.com",
      "role": "Developer"
    }
  ],
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "guzzlehttp/guzzle": "^7.0"
  },
  "suggest": {
    "psr/http-client": "For using PSR-18 HTTP clients with RequestValidator",
    "psr/http-factory": "For PSR-7 message factory support",
    "guzzlehttp/psr7": "PSR-7 implementation for PSR-18 clients",
    "nyholm/psr7": "Alternative PSR-7 implementation"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Rboschin\\AmazonAlexa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rboschin\\AmazonAlexa\\Test\\": "test/Test/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "php-cs-fixer fix --config=.php_cs.php -v --allow-risky=yes"
  }
}
